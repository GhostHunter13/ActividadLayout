<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    android:background="@color/yellowTitle"
    tools:context=".relativeLayout">

    <TextView
        android:id="@+id/tvRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="center"
        android:text="DiseÃ±o Relative Layout" />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/etNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descripcionRelativa"/>

    <ImageView
        android:layout_below="@+id/etNombre"
        android:id="@+id/imageRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/relative">

    </ImageView>

    <Button
        android:id="@+id/btnRegresarRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageRelative"
        android:layout_alignParentRight="true"
        android:text="Regresar" />

    <Button
        android:onClick="regresarMain"
        android:id="@+id/btnRegresarRl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageRelative"
        android:layout_alignParentLeft="true"
        android:text="Regresar" />


</RelativeLayout>